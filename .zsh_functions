cw() { cd $1; pwd; }

cll() { cw $1; ll; }

mc() { mkdir $1; cw $1; }

search() {
  if [[ "$1" != "" ]]; then
    sudo find . -name "*$1*"
  fi
}

chmod_number() {
  if [[ "$OSTYPE" == "linux-gnu" ]]; then
    stat --format '%a' $1
  elif [[ "$OSTYPE" == "darwin"* ]]; then
    stat -f "%OLp" $1
  fi
}
